# Film
Film "image" 
  "integer xresolution" [640] 
  "integer yresolution" [480] 

# Integrator
SurfaceIntegrator "directlighting" 

# Sampler
Sampler "lowdiscrepancy" 
  "integer pixelsamples" [8] 

# Filter
PixelFilter "gaussian" 
  "float alpha" [7.5] 
  "float xwidth" [2] 
  "float ywidth" [2] 

# Camera-camera internal orientation
LookAt 0 0 0 0 0 -1 0 1 0
# Camera scene orientation
Scale -1 1 1
Rotate 0 1 0 0
Rotate 0 0 1 0
Rotate 0 0 0 1
Translate 3.200000 -0.000000 -76.400000
# Camera-camera
Camera "perspective" 
  "float fov" [38.552603] 

WorldBegin

# texture checks
