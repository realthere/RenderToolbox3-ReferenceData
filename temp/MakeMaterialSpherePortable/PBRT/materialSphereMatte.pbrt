# Film
Film "image" 
  "integer xresolution" [200] 
  "integer yresolution" [160] 

# Integrator
SurfaceIntegrator "directlighting" 

# Sampler
Sampler "lowdiscrepancy" 
  "integer pixelsamples" [8] 

# Filter
PixelFilter "gaussian" 
  "float alpha" [2] 
  "float xwidth" [2] 
  "float ywidth" [2] 

# Camera-camera internal orientation
LookAt 0 0 0 0 0 -1 0 1 0
# Camera scene orientation
Scale -1 1 1
Rotate 0 1 0 0
Rotate 0 0 1 0
Rotate 0 0 0 1
Translate 0 0 -5
# Camera-camera
Camera "perspective" 
  "float fov" [40.176374] 

WorldBegin

# texture earthTexture
Texture "earthTexture" "float" "imagemap" 
  "string filename" "earthbump1k-stretch-rgb.exr" 
  "float gamma" [1] 
  "float maxanisotropy" [20] 
  "bool trilinear" "false" 
  "float udelta" [0.0] 
  "float uscale" [1.0] 
  "float vdelta" [0.0] 
  "float vscale" [1.0] 
  "string wrap" "repeat" 

# texture zzz-earthBumpMap-scaled
Texture "zzz-earthBumpMap-scaled" "float" "scale" 
  "texture tex1" "earthTexture" 
  "float tex2" [0.1] 

# material Material-material
MakeNamedMaterial "Material-material" 
  "string type" "matte" 
  "spectrum Kd" "mccBabel-11.spd" 
  "texture bumpmap" "zzz-earthBumpMap-scaled" 

ObjectBegin "Icosphere-mesh"
# object Icosphere-mesh
NamedMaterial "Material-material"
NamedMaterial "Material-material"
Include "mesh-data-Icosphere-mesh_0.pbrt"

ObjectEnd

# Icosphere
AttributeBegin
TransformBegin Translate 0 0 0
TransformBegin Rotate 0 0 0 1
TransformBegin Rotate 0 0 1 0
TransformBegin Rotate 0 1 0 0
TransformBegin Scale 1 1 1
ObjectInstance "Icosphere-mesh"
TransformEnd
TransformEnd
TransformEnd
TransformEnd
TransformEnd
AttributeEnd

# Point
AttributeBegin
TransformBegin Translate 0 5 5
TransformBegin Rotate 0 0 0 1
TransformBegin Rotate 0 0 1 0
TransformBegin Rotate 0 1 0 0
TransformBegin Scale 1 1 1
# light source Point-light
LightSource "point" 
  "rgb I" [1 1 1] 
TransformEnd
TransformEnd
TransformEnd
TransformEnd
TransformEnd
AttributeEnd

WorldEnd
